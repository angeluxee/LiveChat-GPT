    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        h1 {
            text-align: center;
            color: #333;
        }

        .salas-list {
            list-style-type: none;
            padding: 0;
            text-align: center;
        }

        .salas-list li {
            margin: 15px;
        }

        .salas-list a {
            text-decoration: none;
            color: #0066cc;
            font-weight: bold;
            padding: 12px 20px;
            border: 2px solid #0066cc;
            border-radius: 8px;
            background-color: #fff;
            transition: background-color 0.3s, color 0.3s;
            display: inline-block;
        }

        .salas-list a:hover {
            background-color: #0066cc;
            color: #fff;
        }
    </style>
</head>
